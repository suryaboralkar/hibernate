<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

 
 
 <bean class="com.xworkz.xworkzapp.Bio" id="bio">
<constructor-arg name="name" value="${name}"></constructor-arg>
<constructor-arg name="address" value="bidar"></constructor-arg>
<property name="age" value="24"></property>

 </bean>
  
  
  <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
  <property name="location" value="Bio.properties"></property>
  </bean>
  
</beans>